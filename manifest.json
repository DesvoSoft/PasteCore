{
    "manifest_version": 3,
    "name": "PasteCore",
    "version": "0.5.5",
    "description": "Save, organize, and instantly paste reusable texts, phrases, notes, and templates, from the right-click menu. Other features: folders, favorites, import/export",
    "permissions": [
        "contextMenus",
        "storage",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": { "default_popup": "popup/popup.html" },
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
  }